<div class="font-mono text-black leading-normal text-base">
  <header class="font-sans p-4 border-b border-grey-lighter flex items-center justify-between flex-wrap">
    <h1 class="flex items-center flex-no-shrink mr-8">
      {{#link-to "index"}}
        {{responsive-image image="logo_noos.png" class="w-48" alt="NOODESIGN"}}
      {{/link-to}}
    </h1>
    <div class="block lg:hidden">
      <button {{action (toggle "isExpanded" this)}} class="flex items-center px-3 py-2 border rounded text-grey-light border-grey-light hover:text-grey-lighter hover:border-grey-lighter">
        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="{{if isExpanded 'block' 'hidden lg:block'}} w-full flex-grow lg:flex lg:items-center lg:w-auto mt-2">
      <div class="text-sm lg:flex-grow">
        {{#each model.nav as |item|}}
          <a href="/{{item.link}}" class="text-base font-light block mt-4 lg:inline-block lg:mt-0 hover:text-grey-light text-black no-underline mr-4">
            {{item.title}}
          </a>
        {{/each}}
      </div>
    </div>
  </header>

  {{outlet}}

  <footer class="bg-black font-sans text-white lg:text-lg p-6 lg:p-8 mt-8">
    <p class="text-center m-6">
      contact : <a class="text-white" href="mailto:contact@noodesign.org">contact@noodesign.org</a>
    </p>
  </footer>
</div>


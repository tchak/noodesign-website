{{title model.title}}
<div class="container md:px-8">
  <h2 class="text-center m-8">
    {{model.title}}
  </h2>
  <time class="block font-medium mb-6">
    {{model.date}}
  </time>
  {{#if model.location}}
    <p class="text-left mb-6">
      {{at model.location}}
      {{model.location}}
    </p>
  {{/if}}
  <p class="text-left mb-6">
    {{model.description}}
  </p>
  {{#if model.guests.length}}
    <p class="text-left mb-6">
      {{t "guests"}}
      {{join model.guests}}
    </p>
  {{/if}}
  {{#if model.partners.length}}
    <p class="text-left mb-2">
      {{t "organisers"}}
    </p>
    {{#each model.partners as |text|}}
      <p class="text-left mb-2">
        {{text}}
      </p>
    {{/each}}
  {{/if}}
  {{#each model.urls as |url|}}
    <p class="text-left mb-2">
      <a href={{url}}>
        {{link-title url}}
      </a>
    </p>
  {{/each}}
</div>

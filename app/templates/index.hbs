<div class="container md:px-8">
  <div id="home" class="my-8">
    {{responsive-image image="logo.png" class="w-full max-h-screen" alt=""}}
  </div>

  <div class="md:h-8"></div>

  <h2 id="about" class="text-center m-6 p-4">QUI SOMMES NOÖS ?</h2>

  <div class="text-left relative">
    {{responsive-background image="logo.png" class="bg-contain bg-center bg-no-repeat absolute pin opacity-15"}}

    {{#each model.about as |text|}}
      <p class="mb-4">{{text}}</p>
    {{/each}}
  </div>

  <h2 id="events" class="text-center m-6 p-4"> ÉVÉNEMENTS À VENIR </h2>
</div>

<div class="max-w-screen flex-wrap flex justify-center text-center border-l border-b border-grey-lighter">
  {{#each model.events as |event|}}
      <div class="h-48 border-r border-t border-grey-lighter
        bg-igor-{{event.color}} md:bg-white hover:bg-igor-{{event.color}}
        w-full md:w-1/3
        items-center justify-around
        {{if event 'flex' 'hidden md:flex'}}">
        {{#if event}}
          <h3>
            {{#link-to "event" event.slug class="p-4 text-black no-underline bg-grey-lighter font-bold text-sm md:text-base"}}
              {{event.slug}}
            {{/link-to}}
          </h3>
        {{/if}}
      </div>
  {{/each}}
</div>

<div class="container md:px-8">
</div>
